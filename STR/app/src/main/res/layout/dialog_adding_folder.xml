<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_900"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/dialog_adding_folder_title"
        android:id="@+id/dialog_adding_folder_text_title"
        android:padding="16dp"
        android:textSize="20sp"
        android:textColor="@color/gray_200"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/dialog_adding_folder_edit_text_folder_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_adding_folder_hint"
        android:textColorHint="@color/gray_700"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toBottomOf="@id/dialog_adding_folder_text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_adding_folder_button_confirm"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="24dp"

        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/dialog_adding_folder_button_confirm"
        android:textColor="@color/gray_200"
        android:text="@string/confirm"
        android:gravity="center"
        android:textSize="18sp"
        android:paddingVertical="8dp"
        android:background="@color/gray_700"/>





</androidx.constraintlayout.widget.ConstraintLayout>